@{
    var slideData = new[]
    {
        new CarouselSlideViewModel
        {
            ImgSrc = "https://www.prada.com/content/dam/pradanux/home_page/2025/04/May_Issue/Days_of_Summer/Woman/banner_DT.jpg/_jcr_content/renditions/cq5dam.web.3328.3328.webp",
            Title = "Days of Summer",
            Content = "Expressive of the carefree joy of summer, the Prada Women’s Collection explores a new idea of romance. Tailored lines soften into weightless layers; feminine touches intertwine with unexpected contrasts. Each piece is a chapter in an unanticipated summer narrative, where beachside ease and urban elegance live side by side.",
            CtaUrl = "#",
            CaptionPosition = "left",
            IsDarkText = false
        },
        new CarouselSlideViewModel
        {
            ImgSrc = "https://www.prada.com/content/dam/pradanux/home_page/2025/04/May_Issue/Days_of_Summer/Man/banner_DT.jpg/_jcr_content/renditions/cq5dam.web.3328.3328.webp",
            Title = "Days of Summer",
            Content = "The new Prada Men’s Collection reimagines summer with essential silhouettes, tailored shapes in lighweight fabrics, shaping a relaxed elegance that is both functional and refined. An authentic wardrobe defined by harmonious contrasts, designed to naturally accompany every moment of the season.",
            CtaUrl = "#",
            CaptionPosition = "left",
            IsDarkText = false
        },
        new CarouselSlideViewModel
        {
            ImgSrc = "https://www.prada.com/content/dam/pradanux/home_page/2025/04/May_Issue/Mosaic/mday/banner_DT.jpg/_jcr_content/renditions/cq5dam.web.3328.3328.webp",
            Title = "Gifts for her",
            Content = "Find the perfect gift for Mother's Day: explore an eclectic selection blending this season's highlights with timeless designs.",
            CtaUrl = "#",
            CaptionPosition = "right",
            IsDarkText = true
        }
    };
}

<div class="px-3 w-6xl">
    <div id="home-carousel" class="relative w-full transition duration-4000 ease-in-out" data-carousel="slide">
        <div class="relative h-96 overflow-hidden md:h-[500px]">
            @foreach (var sd in slideData)
            {
                @await Html.PartialAsync("_CarouselSlide.cshtml", sd)
            }
        </div>

        <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
            @for (var i = 0; i < slideData.Length; i++)
            {
                <button type="button" class="w-3 h-3 rounded-full" aria-label="Slide @(i + 1)"
                        data-carousel-slide-to="{i}"></button>
            }
        </div>

        <button type="button"
                class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
                data-carousel-prev>
            <span
                class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/40 group-hover:bg-white/20 group-focus:ring-1 group-focus:ring-white/50 group-focus:outline-none">
                @await Component.InvokeAsync("SvgIcon", new { name = "chevron-left" })
            </span>
        </button>
        <button type="button"
                class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
                data-carousel-next>
            <span
                class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/40 group-hover:bg-white/20 group-focus:ring-1 group-focus:ring-white/50 group-focus:outline-none">
                @await Component.InvokeAsync("SvgIcon", new { name = "chevron-right" })
                <span class="sr-only">Next</span>
            </span>
        </button>
    </div>
</div>