@model ReviewResponse

<div class="col-start-2 col-span-2 h-full">
    <p class="font-semibold">@Model.Email</p>
    <div class="text-yellow-500">
        @for (var i = 0; i < Model.Rating; i++)
        {
            <span>★</span>
        }
    </div>
    <p class="text-sm text-gray-500 mt-2">@Model.CreatedDate</p>
</div>
<div class="col-start-4 col-span-8 space-y-2 h-full">
    <p class=" font-semibold">@Model.Title</p>
    <p>@Model.Comment</p>
    <a href="#" class="text-sm underline text-gray-500 hover:underline">Report infringement</a>
</div>