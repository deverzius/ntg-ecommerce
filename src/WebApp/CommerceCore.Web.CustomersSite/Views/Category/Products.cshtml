@model CategoryPageViewModel?

@{
    ViewData["Title"] = "Products By Category";
    var products = Model?.Products?.Items ?? [];
}

<div class="flex flex-col items-center py-4 gap-y-10">
    <div class="px-3 w-6xl grid grid-cols-12 gap-6 items-center">
        <div class="text-center col-span-2">
            <a href="/" class="flex items-center gap-2">
                @await Component.InvokeAsync("SvgIcon", new { name = "chevron-left", size = 28 })
                <span class="text-lg">Back</span>
            </a>
        </div>

        <div class="text-center col-span-8">
            <h3 class="text-3xl font-semibold">@Model?.Category.Name</h3>
        </div>

        @foreach (var p in products)
        {
            <div class="col-span-3">
                @await Component.InvokeAsync("Product", p)
            </div>
        }
    </div>
</div>
